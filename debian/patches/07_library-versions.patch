From: Balint Reczey <balint@balintreczey.hu>
Date: Sat, 27 Jul 2013 10:02:36 +0200
Subject: [PATCH] Use proper shared library versions

---
 epan/CMakeLists.txt            |    2 +-
 epan/Makefile.am               |    2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/epan/CMakeLists.txt b/epan/CMakeLists.txt
index 9b8d4d9..a3e6fe6 100644
--- a/epan/CMakeLists.txt
+++ b/epan/CMakeLists.txt
@@ -1551,7 +1551,7 @@ add_library(epan ${LINK_MODE_LIB}
 
 add_dependencies(epan svnversion)
 
-set(FULL_SO_VERSION "3.0.1")
+set(FULL_SO_VERSION "3.1.0")
 
 set_target_properties(epan PROPERTIES COMPILE_DEFINITIONS "WS_BUILD_DLL")
 set_target_properties(epan PROPERTIES LINK_FLAGS "${WS_LINK_FLAGS}")
diff --git a/epan/Makefile.am b/epan/Makefile.am
index a090281..d405cc9 100644
--- a/epan/Makefile.am
+++ b/epan/Makefile.am
@@ -56,7 +56,7 @@ ACLOCAL_AMFLAGS = `../aclocal-flags`
 noinst_LTLIBRARIES = libwireshark_generated.la libwireshark_asmopt.la
 lib_LTLIBRARIES = libwireshark.la
 # http://www.gnu.org/software/libtool/manual/html_node/Updating-version-info.html
-libwireshark_la_LDFLAGS = -version-info 3:1:1 @LDFLAGS_SHAREDLIB@
+libwireshark_la_LDFLAGS = -version-info 4:0:1 @LDFLAGS_SHAREDLIB@
 
 include Makefile.common
 
